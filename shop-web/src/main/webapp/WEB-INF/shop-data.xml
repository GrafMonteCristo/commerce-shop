<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans.xsd">

    <bean class="org.springframework.beans.factory.config.PropertyPlaceholderConfigurer">
        <property name="location" value="/WEB-INF/shopdata.properties" />
    </bean>

    <!-- JDBC Pool -->
    <bean id="jdbcStoragePoolProperties" class="org.apache.tomcat.jdbc.pool.PoolProperties" lazy-init="false">
        <property name="url" value="${db.url}"/>
        <property name="driverClassName" value="${db.classname}"/>
        <property name="validationQuery" value="${db.validation}"/>
        <!--<property name="testOnBorrow" value="true"/>-->
        <property name="maxIdle" value="30"/>
        <property name="maxActive" value="30"/>
        <property name="initialSize" value="1"/>
        <property name="username" value="${db.user}"/>
        <property name="password" value="${db.pass}"/>
        <property name="defaultAutoCommit" value="true"/>
        <property name="removeAbandoned" value="true"/>
        <property name="removeAbandonedTimeout" value="60"/>
    </bean>

    <bean id="JDBCStorageSource" class="org.apache.tomcat.jdbc.pool.DataSource" destroy-method="close" lazy-init="false">
        <property name="poolProperties" ref="jdbcStoragePoolProperties" />
    </bean>

    <bean id="DataAccess" class="shop.data.DataAccessImpl">
        <property name="sourceData" ref="JDBCStorageSource" />
    </bean>

</beans>